<h1> <%= @vendor.name %> </h1>

<br>
<br>

<h3> My Sweets That Bring All Da Boyz To The Yard: </h3>

<% @sweets.each do |sweet|%>
    <br>
    <%= link_to sweet.name, sweet %>
    <br>
<% end %>

<%= form_for @vendor_sweet do |f| %>
  <%= f.hidden_field :vendor_id, value: @vendor.id%>
  <%= f.label :sweet_id %>
  <%= f.collection_select :sweet_id, @allsweets, :id, :name %>
  <%= f.submit %>
<% end %>
